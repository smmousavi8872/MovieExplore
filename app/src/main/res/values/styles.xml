<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:statusBarColor">@color/pureBlack</item>
    <item name="android:windowLightStatusBar">true</item>

  </style>

  <style name="darkEditTextStyle" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="colorPrimary">@color/pureWhite</item>
    <item name="colorPrimaryDark">@color/pureWhite</item>
    <item name="colorAccent">@color/pureWhite</item>
  </style>

  <style name="darkTextInputLayoutStyle" parent="@style/TextAppearance.AppCompat">
    <item name="android:textColor">@color/pureWhite</item>
  </style>




</resources>
